<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Acceso</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="css/acceso.css">
  <link rel="icon" href="img/cel.ico" />
</head>

<body>
  <div class="container">
    <form action="login" method="POST">
      <h1>Login</h1>
      <% if (username == undefined) { %>
      <div class="input-box">
        <input type="text" placeholder="username" name="username" id="username" required />
        <!-- <i class="bx bxs-user"></i> -->
      </div>
      <% } else { %>
      <% if (authErrorName) { %>
      <div class="input-box">
        <input type="text" autocomplete="off" class="authError" placeholder="El usuario no existe" name="username" id="username" required />
      </div>
      <% } else {%>
      <div class="input-box">
        <input type="text" autocomplete="off" placeholder="username" name="username" id="username" value="<%= username %>" required />
      </div>
      <% } %>
      <!-- <i class="bx bxs-user"></i> -->
      <% } %>
      <% if (authErrorPassword) {%>
      <div class="input-box">
        <input type="password" autocomplete="new-password" class="authError" placeholder="Password dont match" name="password" id="password" required />
        <!-- <i class="bx bxs-lock-alt"></i> -->
      </div>
      <% } else { %>
      <div class="input-box">
        <input type="password" autocomplete="new-password" placeholder="password" name="password" id="password" required />
        <!-- <i class="bx bxs-lock-alt"></i> -->
      </div>
      <% } %>

      <div class="remember-forgot">
        <label><input name="remember" id="remember" type="checkbox" /> Remember me</label>
        <a href="#">Forgot password?</a>
      </div>

      <button type="submit" class="btn" href="main.html">Login</button>

      <div class="register-link">
        <p>Don't have an account? <a href="#">Register here!</a></p>
      </div>
    </form>
  </div>
</body>
</html>