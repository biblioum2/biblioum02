<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Administrar Usuarios</title>
<link rel="stylesheet" href="/css/users.css">
<link rel="stylesheet" href="/css/nav-admin.css">
<!-- <link rel="stylesheet" href="/css/footer.css"> -->
</head>
<body>
    <%- include('./partials/adminHeader.ejs') %>
    
    <% if (success !== undefined) { %>
        <div class="notification <%= success ? 'success' : 'error' %>">
          <% if (success) { %>
            <p>¡Usuario insertado con éxito!</p>
            <% success = undefined %>
          <% } else { %>
            <p>¡Error al agregar usuario!</p>
            <% success = undefined %>
          <% } %>
        </div>
      <% } %>
      
<div id="notification"></div>

    <div class="container">
        <section id="add-user">
            <h2>Agregar Usuario</h2>
            <form id="form-add-user" class="form" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" id="username" name="username" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" autocomplete="new-password" required>
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" id="email" name="email" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="role">Rol</label>
                    <select class="" name="role" id="role">
                        <option value="student">Estudiante</option>
                        <option value="admin">Administrador</option>
                    </select>                
                </div>
                <button type="submit" class="btn-submit">Agregar Usuario</button>
            </form>
        </section>

        <section>
            <form id="search-users" action="/search-users" method="POST">
                <h2>Buscar Usuarios</h2>
                <input type="text" autocomplete="off" id="search-input" placeholder="Buscar usuario por nombre...">
            </form>
            
            <h2>Lista de Usuarios</h2>
            <table id="user-table" class="user-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre de usuario</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se llenarán dinámicamente los datos de los usuarios -->
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.user_id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td>
                                <button class="btn-edit">Editar</button>
                                <button class="btn-delete">Eliminar</button>
                            </td>
                        </tr>
                      <% }) %>
                    
                    <!-- Puedes agregar más filas dinámicamente con JavaScript -->
                </tbody>
            </table>
        </section>
    </div>
    <script>
        // Función para esconder la notificación después de cierto tiempo
        function hideNotification() {
          const notification = document.querySelector('.notification');
          if (notification) {
            setTimeout(() => {
              notification.style.opacity = '0'; // Cambia la opacidad para desaparecer gradualmente
              setTimeout(() => {
                notification.style.display = 'none'; // Oculta la notificación después de desvanecerse
              }, 500);
            }, 2500); // 5000 milisegundos = 5 segundos
          }
        }
        hideNotification();

      </script>
      
</body>
</html>
